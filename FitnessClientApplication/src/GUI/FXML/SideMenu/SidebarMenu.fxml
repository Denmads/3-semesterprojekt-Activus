<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.FXML.SideMenu.SidebarMenuController">
   <children>
      <HBox fx:id="root">
         <children>
            <VBox fx:id="buttonBox" alignment="TOP_CENTER" onMouseExited="#hideMenu" prefWidth="300.0" spacing="20.0" style="-fx-background-color: #000000; -fx-border-color: #515151; -fx-border-width: 0 3 0 0;">
               <children>
                  <ImageView fitHeight="138.0" fitWidth="231.0" opacity="0.9">
                     <image>
                        <Image url="@../../../Images/activus_logo_transparent.png" />
                     </image>
                  </ImageView>
                  <Button fx:id="profileBtn" mnemonicParsing="false" onAction="#ViewProfile" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #707070; -fx-background-radius: 30;" text="Profile" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
                  <Button fx:id="statsBtn" mnemonicParsing="false" onAction="#ViewStats" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #707070; -fx-background-radius: 30;" text="Stats" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
                  <StackPane>
                     <children>
                        <Button fx:id="BuddiesBtn" mnemonicParsing="false" onAction="#ViewBuddies" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #707070; -fx-background-radius: 30;" text="Buddies" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Button>
                        <Label fx:id="messegetLb" alignment="CENTER" minWidth="25.0" style="-fx-background-color: #cc3333; -fx-background-radius: 100;" text="99+" textFill="WHITE" translateX="120.0" translateY="-15.0" StackPane.alignment="CENTER">
                           <padding>
                              <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                           </padding>
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                        </Label>
                     </children>
                  </StackPane>
                  <Button fx:id="findBuddiesBtn" mnemonicParsing="false" onAction="#ViewFindBuddy" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #707070; -fx-background-radius: 30;" text="Find buddy" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
                  <Button fx:id="exercicesBtn" mnemonicParsing="false" onAction="#ViewExercise" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #707070; -fx-background-radius: 30;" text="Exercices" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
                  <Button fx:id="trainingProgramBtn" mnemonicParsing="false" onAction="#ViewTrainingPrograms" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #707070; -fx-background-radius: 30;" text="Training Programs" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
                  <Button fx:id="loguotBtn" mnemonicParsing="false" onAction="#LogoutBtn" prefHeight="37.0" prefWidth="125.0" style="-fx-background-color: #e58245; -fx-background-radius: 30;" text="Logout" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
               </padding>
            </VBox>
            <Label onMouseEntered="#showMenu" style="-fx-rotate: 90; -fx-background-color: #515151; -fx-background-radius: 10 10 0 0;" text="Menu">
               <HBox.margin>
                  <Insets left="-19.0" right="-20.0" top="40.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <padding>
                  <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
               </padding>
            </Label>
         </children>
      </HBox>
   </children>
</HBox>
