<StackPane style="-fx-background-color: #e58245;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.CalenderPageController">
   <children>
      <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #e58245;">
         <children>
            <Pane />
            <VBox>
               <children>
                  <TextField alignment="CENTER" editable="false" style="-fx-background-color: #FFFFFF; -fx-background-radius: 30 30 00 00;" text="Monday" />
                  <ListView fx:id="listViewMonday" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <TextField alignment="CENTER" editable="false" style="-fx-background-color: #FFFFFF; -fx-background-radius: 30 30 00 00;" text="Tuesday" />
                  <ListView fx:id="listViewTuesday" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <TextField alignment="CENTER" editable="false" style="-fx-background-color: #FFFFFF; -fx-background-radius: 30 30 00 00;" text="Wednesday" />
                  <ListView fx:id="listViewWednesday" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <TextField alignment="CENTER" editable="false" style="-fx-background-color: #FFFFFF; -fx-background-radius: 30 30 00 00;" text="Thursday" VBox.vgrow="ALWAYS" />
                  <ListView fx:id="listViewThursday" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <TextField alignment="CENTER" editable="false" style="-fx-background-color: #00FF00; -fx-background-radius: 30 30 00 00;" text="Friday" />
                  <ListView fx:id="listViewFriday" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <TextField alignment="CENTER" editable="false" style="-fx-background-color: #FFFFFF; -fx-background-radius: 30 30 00 00;" text="Saturday" />
                  <ListView fx:id="listViewSaturday" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <TextField alignment="CENTER" editable="false" style="-fx-background-color: #FFFFFF; -fx-background-radius: 30 30 00 00;" text="Sunday" />
                  <ListView fx:id="listViewSunday" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <SplitMenuButton mnemonicParsing="false" text="Choose a day" VBox.vgrow="ALWAYS">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Monday" />
                      <MenuItem mnemonicParsing="false" text="Tuesday" />
                        <MenuItem mnemonicParsing="false" text="Wednesday" />
                        <MenuItem mnemonicParsing="false" text="Thursday" />
                        <MenuItem mnemonicParsing="false" text="Friday" />
                        <MenuItem mnemonicParsing="false" text="Saturday" />
                        <MenuItem mnemonicParsing="false" text="Sunday" />
                    </items>
                  </SplitMenuButton>
                  <TextField editable="false" style="-fx-background-radius: 30;" text="Choose a traningsprogram" VBox.vgrow="ALWAYS" />
                  <SplitMenuButton alignment="CENTER" mnemonicParsing="false" text="Tranings program" VBox.vgrow="ALWAYS">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Monday" />
                        <MenuItem mnemonicParsing="false" text="Tuesday" />
                        <MenuItem mnemonicParsing="false" text="Wednesday" />
                        <MenuItem mnemonicParsing="false" text="Thursday" />
                        <MenuItem mnemonicParsing="false" text="Friday" />
                        <MenuItem mnemonicParsing="false" text="Saturday" />
                        <MenuItem mnemonicParsing="false" text="Sunday" />
                     </items>
                  </SplitMenuButton>
                  <Button mnemonicParsing="false" style="-fx-background-radius: 30;" text="Add tranings program to day" VBox.vgrow="ALWAYS" />
